
<div id="login_container">
<div id="login">
<h2 class="heading">Forgot your password?</h2>

<%= form_for(resource_name, resource, :url => password_path(resource_name)) do |f| %>
  <%= f.error_messages %>

  <p><%= f.label :email %></p>
  <p><%= f.text_field :email %></p>

  <p class="submit"><%= f.submit "Send me reset password instructions" ,:class=>'btn large' %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
</div>
</div>
