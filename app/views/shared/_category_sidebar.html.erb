<div class="leftContent left">
  <ul>
   <%i=0%>
    <% Category.all(:include => :listings).each do |category| %>
      <% unless category.listings.blank? %>
       <%if i==0%><li class="<%= request.fullpath =~ /books/ || request.fullpath =~// ? 'current':'link' %>"><%else%><li><% end %> <%= link_to category.name, category_listings_path(category) %></li>
       <% i=i+1%>
      <%end%>
    <%end%>
  </ul>
</div>

