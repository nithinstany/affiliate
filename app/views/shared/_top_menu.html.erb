<% unless current_user -%>
  <%= link_to 'Sign-up', new_user_registration_path %> &nbsp; | &nbsp;
  <%= link_to 'Login', new_user_session_path %> &nbsp; | &nbsp;
  <%= link_to image_tag("/images/social-icons/facebook_32.png", :alt => "Sign in with Facebook"), omniauth_authorize_path('user', 'facebook') %>
<%else-%>
  <% if current_user.is_admin? %>
     <%= link_to 'Administration', admin_root_path %> &nbsp; | &nbsp;
  <%end%>
  <%= link_to "Histroy", histroys_path %> &nbsp; | &nbsp;
  <%= link_to 'Edit Details', edit_user_path(current_user.id) %> &nbsp; | &nbsp;
  <%= link_to 'My Earnings', earnings_path %> &nbsp; | &nbsp;
  <%= link_to 'Logout', destroy_user_session_path %>
<%end-%>

