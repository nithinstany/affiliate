<!DOCTYPE html>
<html>
<head>
  <title>little surprizes </title>
  <%= stylesheet_link_tag 'style','facebox', :cache => true %>
  <%= javascript_include_tag :defaults,'facebox.js' %>
  <meta content='Little surprizes - Shop and save!' type='keyword'>
  <%= csrf_meta_tag %>
   <script type ='text/javascript'>
    var auth_token = '<%=escape_javascript(form_authenticity_token)%>'
  </script>
  <%= yield :extra_javascripts %>
</head>
<body>
 <div class="clear"></div>
  <div class="container">
    <div class="header">
      <div class="headertop">
        <div class="logo left">
          <%= link_to '<img src="/images/logo.jpg" height="96px"/>'.html_safe, root_path %>
        </div>
        <div class="right links">
          <ul>
            <li><%= link_to 'Shop'.html_safe, root_path %></li>
            <li><%= link_to "About", about_path %></li>
		    <li><%= link_to "FAQ", faq_path %></li>

           <% unless current_user -%>
      <li><%= link_to 'Sign-up', new_user_registration_path %> </li>
      <li class='signin'><%= link_to 'Login', new_user_session_path %> </li>
      <!-- <li><%= link_to image_tag("/images/social-icons/facebook_connect.gif", :alt => "Sign in with Facebook"), omniauth_authorize_path('user', 'facebook') %> -->
    <%else-%>
      <li><%= link_to 'Logout', destroy_user_session_path %></li>
    <%end-%>
          </ul>
       </div>
    </div>
    <div class="right">
      <%= render :partial => 'shared/top_menu'%>
    </div>
  </div>

  <div class = 'clear'> </div>
    <%if notice %> <div class="notice"><p><%= notice %> </p></div><%end-%>
  <div class="wrapper">
    <div class="share">
       <a href="http://www.facebook.com/sharer.php?u= www.littlesurprizes.com &amp;t= www.littlesurprizes.com" TARGET="_blank">Share</a>

       <iframe src="http://www.facebook.com/plugins/like.php?href=http%3A%2F%2Flittlesurprizes.com%2F&amp;layout=standard&amp;show_faces=false&amp;width=200&amp;action=like&amp;font&amp;colorscheme=light&amp;height=35" scrolling="no" frameborder="0" style="border:none; overflow:hidden;margin-right:5px; height:35px;float:right;" allowTransparency="true"></iframe>
    </div>
    <%= yield %>
  </div>
<div class="clear"></div>
</div>
<div class="clear"></div>
<div class="footer"></div>
</body>
</html>

