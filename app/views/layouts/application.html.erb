<!DOCTYPE html>
<html>
<head>
  <title>little surprizes </title>
  <%= stylesheet_link_tag 'style' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
   <script type ='text/javascript'>
    var auth_token = '<%=escape_javascript(form_authenticity_token)%>'
  </script>
  <%= yield :extra_javascripts %>
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="headertop">
        <div class="logo left">
          <%= link_to '<img src="/images/logo.jpg" height="96px"/>'.html_safe, root_path %>
        </div>
        <div class="right links">
           <ul>
           <% unless current_user -%>
              <li><%= link_to 'Sign-up', new_user_registration_path %> </li>
              <li><%= link_to 'Login', new_user_session_path %> </li>
              <li><%= link_to image_tag("/images/social-icons/facebook_connect.gif", :alt => "Sign in with Facebook"), omniauth_authorize_path('user', 'facebook') %>
          <%else-%>
              <li><%= link_to 'Logout', destroy_user_session_path %></li>
          <%end-%>
          </ul>
       </div>
    </div>
    <div class="right">
      <%= render :partial => 'shared/top_menu'%>
    </div>
  </div>

  <div class = 'clear'> </div>
    <%if notice %> <div class="notice"><p><%= notice %> </p></div><%end-%>
  <div class="wrapper">
    <%= yield %>
  </div>
<div class="clear"></div>
</div>

<div class="footer"></div>
</body>
</html>

