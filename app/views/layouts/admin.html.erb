<!DOCTYPE html>
<html>
<head>
  <title>Affiliate</title>
  <%= stylesheet_link_tag 'admin' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
   <script type ='text/javascript'>
    var auth_token = '<%=escape_javascript(form_authenticity_token)%>'
  </script>
  <%= yield :extra_javascripts %>

</head>
<body>
  <div id= 'wrapper'>
    <div id="header">
      <div id="logo" class = 'left'>  <h1>Affiliate </h1>  </div>
      <div id="global_links" class = 'right'>
        <%= link_to 'Logout', destroy_user_session_path %>
      </div>
      <div class = 'clear'> </div>
      <div id="menu">
         <%= render :partial => 'shared/links' %>
      </div>
    </div>

    <div id='content'>
      <div id='top_bar'>
        <div id='content_heading' class ='left'> <h1><%= yield :heading %> </h1> </div>
        <div id= 'actions' class='right'> <%= yield :actions %> </div>
        <div class = 'clear'> </div>
      </div>

      <%= yield %>
     </div>
  </div>
</body>






</html>

