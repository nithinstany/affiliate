<%= render :partial => 'shared/category_sidebar' %>

<div id="listings">

  <% unless @category.listings.featured.blank? %>
    <% @category.listings.featured.each do |listing| %>
       <%= raw(listing.banner) %> <br />
    <%end%>
  <%else%>
     <p> Listings are not available for category </p>
  <%end%>

  <% if current_user %>
    <% content_for :extra_javascripts do %>
      <script type="text/javascript">
        $(function()
          {
             $("#listings > a").each(function ()
             {
                var href = $(this).attr('href');
                $(this).attr('href', href + "&key=<%=current_user.key%>");
             });
             $("#listings > iframe").each(function ()
             {
                var href = $(this).attr('href');
                $(this).attr('href', href + "&key=<%=current_user.key%>");
             });

          });
      </script>
    <%end%>
  <%end%>


</div>

