<% content_for :heading do %>
  <div class="heading">
   <div class="left" style="width:90%;"><h1 class="listHeading">Listing Earnings</h1></div>
  </div>
<%end%>

<div style='width:90%;margin:10px;'>
  <% AffiliateMerchant.all.each do |af|%>
    <%= af.name %> : <%= number_to_currency(af.total_earnings) %> &nbsp;&nbsp;
  <%end%>
</div>

<table class="listing">
  <tr>
    <th>Name</th>
    <th>Merchant</th>
    <th>Order id </th>
    <th>Sales </th>
    <th>commissions</th>
    <th>transaction date</th>
  </tr>

<% @transactions.each do |tran| %>
  <tr>
    <td><%= tran.user.name_or_email %></td>
    <td><%= tran.affiliate_merchant.name %> </td>
    <td><%= tran.orderid %> </td>
    <td><%= number_to_currency(tran.sales) %> </td>
    <td><%= number_to_currency(tran.commissions) %></td>
    <td><%= tran.tranactiondate %></td>
  </tr>
<% end %>
</table>


<div class="total right">Total : <%= number_to_currency(@transactions.sum(:commissions)) %>

